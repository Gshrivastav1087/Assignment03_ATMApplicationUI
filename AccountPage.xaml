<Window x:Class="ATMApplication_WPF.UI.AccountPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Account Operations" Height="500" Width="600" WindowState="Maximized">
    <Grid>
        <TextBlock Text="Welcome, Account Holder" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" FontSize="16"/>


        <Button Content="Deposit Money" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="50,60,50,0" Height="40" Width="200" Click="DepositButton_Click"/>
        <Button Content="Withdraw Money" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="50,120,50,0" Height="40" Width="200" Click="WithdrawButton_Click"/>
        <Button Content="View Statement" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="50,180,50,0" Height="40" Width="200" Click="StatementButton_Click"/>
        <Button Content="Log Out" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="50,240,50,0" Height="40" Width="200" Click="LogOutButton_Click"/>

        <!-- Add a TextBox to display the bank statement -->
        <TextBox x:Name="StatementTextBox" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Height="200" Margin="10" IsReadOnly="True" TextWrapping="Wrap" AcceptsReturn="True" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
    </Grid>
</Window>